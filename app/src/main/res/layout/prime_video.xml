<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161525">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:paddingHorizontal="150dp"

        app:srcCompat="@mipmap/Prime_Video_logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="393dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarDefaultDelayBeforeFade="200"
        android:visibility="visible"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="72dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INICIO"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PELICULAS"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="428dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERIES"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFANTIL"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="313dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORIGINALS"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="396dp"
        android:layout_height="241dp"
        app:srcCompat="@mipmap/el_pueblo"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="126dp" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="267dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="-2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Series Amazon Original y exclusivas"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="4dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sigue viendo tus series y peliculas"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="177dp" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="392dp"
                android:layout_height="144dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                tools:layout_editor_absoluteX="-2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="194dp"
                        android:layout_height="129dp"
                        app:srcCompat="@mipmap/StarTrek"
                        tools:layout_editor_absoluteX="6dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="194dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="12dp"
                        android:scaleY="1"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:srcCompat="@mipmap/Treadstone"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="194dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:srcCompat="@mipmap/StarTrek"
                        tools:layout_editor_absoluteY="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="392dp"
                android:layout_height="144dp"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="41dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="194dp"
                        android:layout_height="129dp"
                        app:srcCompat="@mipmap/StarTrek"
                        tools:layout_editor_absoluteX="6dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="194dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="12dp"
                        android:scaleY="1"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:srcCompat="@mipmap/Treadstone"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="194dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:srcCompat="@mipmap/StarTrek"
                        tools:layout_editor_absoluteY="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>